{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es6",
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es6", "dom"]
  },
  "exclude": ["test"],
  "include": ["src"]
}
